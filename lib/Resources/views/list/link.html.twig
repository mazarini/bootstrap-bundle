{# lib/Resources/views/list/link.html.twig #}

{% set class = class|default('') %}
{% if href == '#' %}
    {% set class = class ~ ' disabled' %}
{% endif %}
{% if href == '' %}
    {% set class = class ~ ' active' %}
    {% set href = '#' %}
{% endif %}
<a href="{{ href }}" class="list-group-item list-group-item-action{{ class }}">
    {% block label %}
        {{ label }}
    {% endblock label %}
</a>
