{# lib/Resources/views/pagination/nav.html.twig #}

{% block nav_container %}
	<nav>
		<ul class="pagination justify-content-center">
			{% include '@MazariniBootstrap/pagination/first.html.twig' with {'link': pageLink(1, 1)} only %}
			{% include '@MazariniBootstrap/pagination/prev.html.twig' with {'link': pageLink(data.pagination.previousPage)} only %}
			{% include '@MazariniBootstrap/pagination/item.html.twig' with {'link': pageLink(data.pagination.currentPage, data.pagination.currentPage)} only %}
			{% include '@MazariniBootstrap/pagination/next.html.twig' with {'link': pageLink(data.pagination.nextPage)} only %}
			{% include '@MazariniBootstrap/pagination/last.html.twig' with {'link': pageLink(data.pagination.lastPage, data.pagination.lastPage)} only %}
		</ul>
	</nav>
{% endblock nav_container %}
