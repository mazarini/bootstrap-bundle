{# lib/Resources/views/pagination/number.html.twig #}

{% block pagination_container %}
	{% if pagination.lastPage > 0 %}
		<nav>
			<ul class="pagination justify-content-center">
				{% for number in 1..pagination.lastPage %}
					{% if pagination.currentPage == number %}
						{% include '@MazariniBootstrap/pagination/item.html.twig' with {'href': '', 'number': number} only %}
					{% else %}
						{% block number %}{% endblock number %}
					{% endif %}
				{% endfor %}
			</ul>
		</nav>
	{% endif %}
{% endblock pagination_container %}
