{# lib/Resources/views/button/base.html.twig #}

{% block button %}
    {% set label = label|default('Validate') %}
    {% set type = type|default('submit') %}
    {% set class = class|default(' btn-outline-dark') %}
    <button type="button" class="btn{ class }" type="submit">
        {% block label %}
            {{ label }}
        {% endblock label %}
    </button>
{% endblock button %}
