{# templates/step/04-pagination.html.twig #}

{% extends 'layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.table ul {
			margin-bottom: 0;
		}
	</style>
{% endblock stylesheets %}

{% block content %}

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Current</th>
				<th>Last page</th>
				<th>nav</th>
				<th>num</th>
			</tr>
		</thead>
		<tbody>
			{% for data in datas %}
				<tr>
					<td>
						{{ data.pagination.currentPage }}
					</td>
					<td>
						{{ data.pagination.lastPage }}
					</td>
					<td>
						{% embed '@MazariniBootstrap/pagination/nav.html.twig' with {'pagination': data.pagination} only %}
							{% block number %}
								{% set href = '#' ~ number %}
								{% include '@MazariniBootstrap/pagination/item.html.twig' with {'href': href, 'number': number} only %}
							{% endblock number %}
						{% endembed %}
					</td>
					<td>
						{% embed '@MazariniBootstrap/pagination/number.html.twig' with {'pagination': data.pagination} only %}
							{% block number %}
								{% set href = '#' ~ number %}
								{% include '@MazariniBootstrap/pagination/item.html.twig' with {'href': href, 'number': number} only %}
							{% endblock number %}
						{% endembed %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock content %}
